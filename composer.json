        }
    ],
    "secure-http" : false,
    "require": {
        "php": ">=5.6.4",
        "level-2/dice": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AboutYou\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.2.0"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
